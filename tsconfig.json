{
	"compilerOptions": {
		"module": "commonjs",
		"target": "ES2020",
		"lib": ["es6", "dom"],
    	"jsx": "react",
		"sourceMap": true,
		"rootDir": ".",
		"strict": false,
		"noImplicitReturns": false,
		"noFallthroughCasesInSwitch": false,
		"noUnusedParameters": false,
    	"esModuleInterop": true,
		"suppressImplicitAnyIndexErrors": true,
		"ignoreDeprecations": "5.0",
		"noImplicitAny": false,
		"noUnusedLocals": false, 
		"noEmitOnError": false,
		"moduleResolution": "node",
		"baseUrl": ".",
		"paths": {
			"~~/*": ["./deviate/packages/nextjs/*", "./deviate/packages/snfoundry/*", "./*"]
		  },
	},
  "exclude": ["node_modules", ".vscode-test"],
  "references": [
    {
      "path": "./deviate/packages/nextjs/tsconfig.json"
    },
	{
		"path": "./deviate/packages/nextjs/tsconfig.json"
	}
  ]
}